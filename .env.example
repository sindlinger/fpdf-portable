# fpdf Configuration File (.env)
# Copy this file to .env and customize with your settings

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# Allowed directories for PDF access (use : to separate multiple paths)
# Example: /home/user/pdfs:/mnt/data/documents
FPDF_ALLOWED_DIRS=/mnt/c/Users/pichau/Desktop/geral_pdf/pdf_cache

# Disable path validation entirely (USE WITH CAUTION! Only for trusted environments)
# FPDF_DISABLE_PATH_VALIDATION=false

# Maximum file size in MB (default: 500)
FPDF_MAX_FILE_SIZE_MB=500

# ==========================================
# PERFORMANCE CONFIGURATION
# ==========================================

# Default number of worker threads for parallel processing
FPDF_DEFAULT_WORKERS=16

# ==========================================
# CACHE CONFIGURATION
# ==========================================

# Default cache directory
FPDF_CACHE_DIR=.cache

# ==========================================
# ADDITIONAL DIRECTORIES EXAMPLES
# ==========================================

# Windows examples (WSL):
# FPDF_ALLOWED_DIRS=/mnt/c/Users/YourName/Documents:/mnt/d/PDFs

# Linux examples:
# FPDF_ALLOWED_DIRS=/home/user/documents:/var/data/pdfs

# Multiple directories:
# FPDF_ALLOWED_DIRS=/path/one:/path/two:/path/three